    <Color x:Key="MainOrangeColor">#FFD2901C</Color>
    <SolidColorBrush x:Key="MainOrangeBrush"
                     Color="#FFD2901C" />
    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}">#88888888</SolidColorBrush>

    <ControlTemplate x:Key="PieDataPointTemplate"
                     TargetType="{x:Type chartingToolkit:PieDataPoint}">
        <Grid x:Name="Root"
              Opacity="0">
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="00:00:00.1000000" />
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation Duration="00:00:00"
                                             Storyboard.TargetName="MouseOverHighlight"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.3" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="SelectionStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="00:00:00.1000000" />
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Unselected" />
                    <VisualState x:Name="Selected">
                        <Storyboard>
                            <DoubleAnimation Duration="00:00:00"
                                             Storyboard.TargetName="SelectionHighlight"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0.6" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
                <VisualStateGroup x:Name="RevealStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="00:00:00.5000000" />
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="Shown">
                        <Storyboard>
                            <DoubleAnimation Duration="00:00:00"
                                             Storyboard.TargetName="Root"
                                             Storyboard.TargetProperty="Opacity"
                                             To="1" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Hidden">
                        <Storyboard>
                            <DoubleAnimation Duration="00:00:00"
                                             Storyboard.TargetName="Root"
                                             Storyboard.TargetProperty="Opacity"
                                             To="0" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Path x:Name="Slice"
                  Fill="{TemplateBinding Background}"
                  Stroke="{TemplateBinding BorderBrush}"
                  StrokeMiterLimit="1"
                  Data="{TemplateBinding Geometry}">
                <Path.ToolTip>
                    <StackPanel>
                        <ContentControl Content="{TemplateBinding IndependentValue}"
                                        HorizontalAlignment="Center" />
                        <ContentControl Content="{TemplateBinding FormattedDependentValue}"
                                        HorizontalAlignment="Center" />
                        <ContentControl Content="{TemplateBinding FormattedRatio}"
                                        HorizontalAlignment="Center" />
                    </StackPanel>
                </Path.ToolTip>
            </Path>
            <Path x:Name="SelectionHighlight"
                  Fill="White"
                  StrokeMiterLimit="1"
                  IsHitTestVisible="False"
                  Opacity="0"
                  Data="{TemplateBinding GeometrySelection}" />
            <Path x:Name="MouseOverHighlight"
                  Fill="White"
                  StrokeMiterLimit="1"
                  IsHitTestVisible="False"
                  Opacity="0"
                  Data="{TemplateBinding GeometryHighlight}" />
        </Grid>
    </ControlTemplate>

